{
    "tasks": [
        {
        "type": "cppbuild",
        "label": "C/C++: g++ Linux",
        "command": "/usr/bin/g++",
        "args": [
            "-fdiagnostics-color=always",
            "-g",
            "${file}",
            "-o",
            "${fileDirname}/dist/${fileBasenameNoExtension}",
            "-O2",
            "-std=c++14",
            "-Wall"
        ],
        "options": {
            "cwd": "${fileDirname}"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": false
        },
        "detail": "自定义方案"
        },
        {
        "type": "cppbuild",
        "label": "C/C++: g++ Windows",
        "command": "g++",
        "args": [
            "-fdiagnostics-color=always",
            "-g",
            "${file}",
            "-o",
            "${fileDirname}\\dist\\${fileBasenameNoExtension}.exe",
            "-O2",
            "-std=c++14",
            "-Wall"
        ],
        "options": {
            "cwd": "${fileDirname}"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "detail": "自定义方案"
        }
    ],
    "version": "2.0.0"
}